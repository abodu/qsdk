/dts-v1/;

/ {
	model = "Qualcomm Atheros APH128";
	compatible = "ath79,aph128";
	#address-cells = <1>;
	#size-cells = <1>;
	interrupt-parent = <&vic>;

	gpios: ath79-gpio {
		#gpio-cells = <2>;
		gpio-controller;
	};

	ahb {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		vic: intc {
			compatible = "interrupt-controller";
			interrupt-controller;
			#interrupt-cells = <1>;
		};

		ehci@1b000000 {
			compatible = "qcom,ag71xx-ehci";
			reg = <0x1b000000 0x20000>;
			interrupts = <3>;
			interrupt-parent = <&vic>;
		};

		spi@1f000000 {
			compatible = "qcom,ag71xx-spi";	 /* master */
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0x1f000000 0x01000000>;

			flash: m25p80@0 {
				compatible = "st,m25p80";	/* modalias */
				spi-max-frequency = <25000000>; /* max_speed_hz */
				reg = <0>;			/* chip_select */
				spi-controller-data = <1 0 0>;  /* is_flash cs_type cs_line */
			};
		};

		wmac@18100000 {
			compatible = "qcom,ag71xx-wmac";
			reg = <0x18100000 0x20000>;
			interrupts = <47>;
			interrupt-parent = <&vic>;
		};

		pci@10000000 {
			compatible = "qcom,ag71xx-pci";
			reg = 	<0x10000000 0x04000000>,
				<0x00000000 0x00000000>,
				<0x14000000 0x00001000>,
				<0x180f0000 0x00000100>,
				<0x180c0000 0x00001000>;
			reg-names = 	"mem_base",
					"io_base",
					"cfg_base",
					"ctrl_base",
					"crp_base";
			interrupts = <46>;
			interrupt-parent = <&vic>;
		};

		MDIO0: mdio@19000000 {
			compatible = "qcom,ag71xx-mdio";
			reg = <0x19000000 0x200>;
			reg-names = "mdio_base";
		};

		ETH0: ethernet@19000000 {
			compatible = "qcom,ag71xx-eth";
			reg = <0x19000000 0x200>;
			reg-names = "mac_base";
			interrupts = <4>;
			interrupt-names = "mac_irq";
			interrupt-parent = <&vic>;
			mdio-handle = <&MDIO0>;
		};
	};

	gpio-keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;

		wps {
			label = "wps";
			gpios = <&gpios 16 1>;
			linux,code = <529>;
			debounce-interval = <60>;
		};
	};

	gpio-leds {
		compatible = "gpio-leds";

		status {
			label = "aph128:green:status";
			gpios = <&gpios 14 1>;
			linux,default-trigger = "timer";
		};

		wps {
			label = "aph128:green:wps";
			gpios = <&gpios 15 1>;
			linux,default-trigger = "timer";
		};

		wlan5g {
			label = "aph128:green:wlan5g";
			gpios = <&gpios 12 1>;
			linux,default-trigger = "timer";
		};

		wlan2g {
			label = "aph128:green:wlan2g";
			gpios = <&gpios 13 1>;
			linux,default-trigger = "timer";
		};
	};
};
