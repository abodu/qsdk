config IDENTITY_STRING
	string "Application Identity String (up to 31 chars)"
	depends TARGET_ubicom32
	default "Unknown - BOARD"
	help

	  This is used to detect compatibility between the application and
	  upgrade images.  The IDENTITY_STRING must match in order for an
	  upgrade image to be accepted for upgrade.

	  For example
	   "ProductX rev1.1"
	  would be a good IDENTITY_STRING

menu "gdbloader"
	depends TARGET_ubicom32
	config GDBLOADER_DIR
		string
		prompt "GDBLoader directory"
		default "$(TOPDIR)/proprietary/gdbloader"

endmenu

menu "ultra"
	depends TARGET_ubicom32
	config ULTRA_DIR
		string
		prompt "Ultra directory"
		default "$(TOPDIR)/proprietary/ultra"

	source target/linux/ubicom32/image/Config.in.ultra.boards
	source target/linux/ubicom32/image/Config.in.ultra.lpj

endmenu
